            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.Activity_Video_Intro"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".activities.Activity_Video_Transicion"
