<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.tictum.appcandidatos.activities.Activity_PreguntaCheckBox">


    <TextView
        android:id="@+id/pregunta_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text="@string/pregunta3"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:orientation="vertical">


    <CheckBox
        android:id="@+id/checkbox_tecnologia1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tecnologia1" />

    <CheckBox
        android:id="@+id/checkbox_tecnologia2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tecnologia2" />

    <CheckBox
        android:id="@+id/checkbox_tecnologia3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tecnologia3" />

    <CheckBox
        android:id="@+id/checkbox_tecnologia4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tecnologia4" />
</LinearLayout>



    <Button
        android:id="@+id/btn_envio_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_siguiente"
        android:layout_marginTop="50dp"
        android:layout_gravity="center" />

</LinearLayout>
