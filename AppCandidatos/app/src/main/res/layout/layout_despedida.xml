<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/despedida">




        <TextView

            android:id="@+id/mensaje_despedida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Muchas gracias y hasta pronto"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="100dp"
            android:gravity="center"/>
        <Button
            android:id="@+id/boton_inicio"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/mensaje_despedida"
            android:text="INICIO"
            android:textSize="25sp"
            android:background="@drawable/boton_blanco"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop = "60dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_tictum_blanco"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


</RelativeLayout>

