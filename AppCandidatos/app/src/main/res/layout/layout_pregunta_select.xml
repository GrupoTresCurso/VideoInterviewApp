<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.example.tictum.appcandidatos.activities.Activity_PreguntaSelect">

        <TextView
            android:id="@+id/pregunta_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Texto de Prueba"
            android:textSize="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="100dp"
            android:gravity="center"
            />

        <Spinner
            android:id="@+id/SpinnerOpciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:layout_below="@id/pregunta_select"
            android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/BarraBotones"
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/numeroPregunta"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="25dp"
            android:background="@drawable/custom_border"
            android:text="Pregunta 1/10"/>

        <Button
            android:background="@drawable/custom_border"
            android:id="@+id/btn_envio_select"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="25dp"
            android:text="@string/btn_envio_text" />

    </LinearLayout>

</RelativeLayout>
